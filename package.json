{
  "name": "dingding-robot-play",
  "version": "1.0.0",
  "description": "钉钉自定义机器人，消息发送工具",
  "main": "shell/main.js",
  "scripts": {
    "start": "concurrently \"NODE_ENV=dev electron .\" \"webpack-dev-server --config compile/webpack.config.dev.js\"",
    "packageDarwin":
      "electron-packager . 'dingBot' --platform=darwin --arch=x64 --icon=bot.icns --out=./dist --asar --ignore=\"(src|dist|compile|assets|node_modules)\"",
    "packageWin":
      "electron-packager . 'dingBot' --platform=win32 --arch=x64 --icon=bot.ico --out=./dist --asar --ignore=\"(src|dist|compile|assets|node_modules)\"",
    "prepackage": "rm -rf build && webpack --config compile/webpack.config.prod.js && rm -rf dist",
    "package": "npm run packageDarwin && npm run packageWin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leftstick/dingding-robot-play.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/leftstick/dingding-robot-play/issues"
  },
  "homepage": "https://github.com/leftstick/dingding-robot-play#readme",
  "devDependencies": {
    "autoprefixer-stylus": "^0.14.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "electron-packager": "^12.1.0",
    "electron-prebuilt": "^1.4.13",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-vue": "^4.5.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.12.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-loader": "^15.2.0",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "codemirror": "^5.38.0",
    "element-ui": "^2.3.9",
    "vue": "^2.5.16"
  }
}
