{
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true
  },
  "extends": ["plugin:vue/base", "standard", "prettier", "prettier/standard"],
  "plugins": ["prettier", "standard"],
  "rules": {
    "prettier/prettier": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "sort-keys": ["off"],
    "sort-vars": ["error"],
    "sort-imports": ["off"],
    "prefer-promise-reject-errors": "off"
  }
}
